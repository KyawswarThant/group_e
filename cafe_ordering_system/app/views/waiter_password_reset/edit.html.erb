<div class="ResetForm">
  <h2>Reset Password</h2>
  <%= form_with model: @waiter, url: waiter_password_reset_edit_path(token: params[:token]) do |form| %>
    <div class="box">
      <%= form.password_field :password, placeholder: "New Password", class: "password" %>
    </div>
    <div class="box">
      <%= form.password_field :password, placeholder: "Confirm Password", class: "password" %>
    </div>
    <div class="submit">
      <%= form.submit "Update", class: "btn" %>
    </div>
  <% end %>
