<div class="Resetform">
  <h1>Reset Password</h1>
  <%= form_with model: @chef, url: waiter_password_reset_edit_path(token: params[:token]) do |form| %>
    <div>
      <%= form.label :password, "New Password:" %>
      <%= form.password_field :password %>
    </div>
    <div>
      <%= form.label :password, "Confirm Password:"%>
      <%= form.password_field :password %>
    </div>
    <div class="submit">
      <%= form.submit "Update"%>
    </div>
  <% end %>
