<div class="ResetForm">
  <h2>Forgot Password?</h2>
  <%= form_with url: waiter_forget_password_path do |form| %>
    <div class="box">
      <%= form.text_field :email, placeholder: "Enter email", class: "email" %>
    </div>
    <div class="submit">
      <%= form.submit "Search", class: "btn" %>
    </div>
  <% end %>
</div>
