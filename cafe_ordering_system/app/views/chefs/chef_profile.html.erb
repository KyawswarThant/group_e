<div class="outer-container">

  <div class="nav">
    <a>
      <h1 class="ttl-logo">SCM Cafe</h1>
    </a>
    <ul>
      <li><%= link_to "Order Lists", chefs_path, class: "link" %></li>
      <li><%= link_to "Item Lists", items_path, class: "link" %></li>
      <li><%= link_to "Profile", chef_profile_path, class: "link is-active" %></li>
      <li>Graph</li>
      <li><%= link_to "Log Out", chef_sign_out_path, class: "link", method: :post %></li>
    </ul>
  </div>
  
  <div class="container">
    <h2  class="mb-20">Chef Profile</h2>
    <div class="login-photo">
      <%= image_tag ("login_icons/img_chef_login.jpg"), class: "logo", alt: "sign up logo" %>
    </div>

    <ul class="column">
      <div class="left">
        <li class="mb-20">Name:</li>
        <li class="mb-20">Email:</li>
        <li class="mb-20">Phone:</li>
        <li class="mb-20">Address:</li>
        <li class="mb-20">Birthday:</li>
      </div>

      <div class="right">
        <li class="mb-20"><%= @chef.name %></li>
        <li class="mb-20"><%= @chef.email %></li>
        <li class="mb-20"><%= @chef.phone %></li>
        <li class="mb-20"><%= @chef.address %></li>
        <li class="mb-20"><%= @chef.birthday %></li>
      </div>
    </ul>

    <div class="profile-password">
      <div class="mb-10">
        <%= link_to "Edit Profile", edit_profile_path %><br>
      </div>
      <%= link_to "Change Password", password_path %>
    </div>

  </div>
</div>
