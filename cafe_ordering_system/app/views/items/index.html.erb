<div class="main-container">
  <div class="create-item">
    Create a new Item?<%= link_to "Create new Item", new_item_path %>
  </div>
  <div>
    <h2 class="hdr"> Coffee </h2>
    <div class="clearfix">
      <% @items.each do |item| %>
        <div class="items-div">
          <% if item.category.downcase == "coffee" %>
            <p><%= image_tag item.image.url(:medium) %></p>
            <p class="item-detail"><%= item.name %></p>
            <p class="item-detail">$<%= item.price %></p>
            <p class="link-btn"><%= link_to "Update ", edit_item_path(item[:id]) %>
            </p>
            <p class="link-btn">
              <%= link_to "Delete", item_path(item[:id]), method: :delete, data: { confirm: "Are you sure you want to delete this item?" } %>
            </p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
