<div class="container">
  <h2>Waiter Password Change</h2>
  <%= form_with model: @waiter, class: "login-form" do |f| %>
    <div class="mb-20">
      <%= f.password_field :current_password, class: "text-box", placeholder: "Enter Current Password" %>
    </div>
    <div class="mb-20">
      <%= f.password_field :password, class: "text-box", placeholder: "Enter New Password" %>
    </div>
    <div class="mb-20">
      <%= f.password_field :confirmation_password, class: "text-box", placeholder: "Enter New Password" %>
    </div>
    <div class="submit">
      <%= f.submit "Update", class: "submit-btn" %>
      <%= link_to "Go Back", waiter_profile_path, class: "cancel-btn" %>
    </div>
  <% end %>
</div>
